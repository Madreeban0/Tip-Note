


# Stage 1: build
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build   # produces /app/dist (for Vite) or /app/build

# Stage 2: serve with nginx
FROM nginx:stable-alpine
COPY --from=build /app/dist /usr/share/nginx/html
# Optionally add custom nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]